{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "ES6",
      "dom",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./build/",
    "sourceMap": true,
    "types": ["node"],
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
        "@store/*": ["src/store/*"],
        "@apptypes/*": ["src/types/*"],
        "@utils/*": ["src/utils/*"],
        "@mocks/*": ["mocks/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/index.tsx"
  ],
}
