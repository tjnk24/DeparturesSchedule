{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "ES6",
      "dom",
    ],
    "outDir": "./build/",
    "sourceMap": true,
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "paths": {
        "@components/*": ["src/components/*"],
        "@pages/*": ["src/pages/*"],
        "@store/*": ["src/store/*"],
        "@apptypes/*": ["src/types/*"],
        "@mocks/*": ["mocks/*"],
        "@bootstrap-module": ["src/assets/bootstrap.min.module.css"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/index.tsx"
  ],

}
